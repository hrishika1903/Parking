'use client';
import { useState } from 'react';
import { ArrowLeft } from 'lucide-react';

const mockVehicles = [
  { number: 'KA01AB1234', userName: 'John Doe', type: '4-wheeler' },
  { number: 'KA02CD5678', userName: 'Jane Smith', type: '2-wheeler' },
];

const generateSlots = (zone, count, occupiedCount) => {
  return Array.from({ length: count }, (_, i) => ({ 
    id: `${zone}-${i + 1}`, 
    occupied: i < occupiedCount, 
    vehicle: i < occupiedCount ? mockVehicles[i % mockVehicles.length] : null  // Fixed: Use modulo to avoid index out of bounds
  }));
};

const mockSlots = {
  'Zone A': generateSlots('A', 20, 12),
  'Zone B': generateSlots('B', 15, 8),
};

export default function ParkingSlotsPage({ setCurrentPage, darkMode }) {
  const [selectedZone, setSelectedZone] = useState('Zone A');
  const [selectedSlot, setSelectedSlot] = useState(null);
  const cardBgClass = darkMode ? 'bg-gray-800' : 'bg-white';
  const textClass = darkMode ? 'text-gray-100' : 'text-gray-900';
  const mutedTextClass = darkMode ? 'text-gray-400' : 'text-gray-600';

  return (
    <div className="space-y-6">
      <div className={`${cardBgClass} p-6 rounded-xl shadow-lg`}>
        <h2 className={`text-2xl font-bold mb-6 ${textClass}`}>Parking Slot View</h2>
        <select
          value={selectedZone}
          onChange={(e) => setSelectedZone(e.target.value)}
          className={`px-4 py-3 rounded-lg border ${
            darkMode ? 'bg-gray-700 border-gray-600 text-white' : 'bg-white border-gray-300'
          }`}
        >
          <option value="Zone A">Zone A</option>
          <option value="Zone B">Zone B</option>
        </select>
      </div>

      <div className={`${cardBgClass} p-6 rounded-xl shadow-lg`}>
        <div className="grid grid-cols-5 md:grid-cols-10 gap-3">
          {mockSlots[selectedZone].map((slot) => (
            <button
              key={slot.id}  // Added key for React list rendering
              onClick={() => slot.occupied && setSelectedSlot(slot)}
              className={`aspect-square rounded-lg font-semibold text-sm transition-all ${
                slot.occupied
                  ? 'bg-red-500 hover:bg-red-600 text-white cursor-pointer'
                  : 'bg-green-500 text-white cursor-default'
              }`}
              disabled={!slot.occupied}  // Added disabled for non-occupied slots to prevent clicks
            >
              {slot.id}
            </button>
          ))}
        </div>
      </div>

      {selectedSlot && (
        <div 
          className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50" 
          onClick={() => setSelectedSlot(null)}  // Close modal on backdrop click
        >
          <div 
            className={`${cardBgClass} p-6 rounded-xl max-w-md w-full`} 
            onClick={(e) => e.stopPropagation()}  // Prevent closing when clicking inside modal
          >
            <h3 className={`text-xl font-semibold mb-4 ${textClass}`}>
              Slot {selectedSlot.id} Details
            </h3>
            <div className="space-y-3">
              <div>
                <p className={`text-sm ${mutedTextClass}`}>Vehicle Number</p>
                <p className={`font-semibold ${textClass}`}>{selectedSlot.vehicle?.number || 'N/A'}</p>  // Added optional chaining for safety
              </div>
              <div>
                <p className={`text-sm ${mutedTextClass}`}>Owner</p>
                <p className={`font-semibold ${textClass}`}>{selectedSlot.vehicle?.userName || 'N/A'}</p>  // Added optional chaining
              </div>
              <div>
                <p className={`text-sm ${mutedTextClass}`}>Vehicle Type</p>
                <p className={`font-semibold ${textClass}`}>{selectedSlot.vehicle?.type || 'N/A'}</p>  // Added optional chaining
              </div>
              <button 
                onClick={() => setSelectedSlot(null)} 
                className="w-full bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold transition-colors"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      )}

      <button 
        onClick={() => setCurrentPage('dashboard')} 
        className={`flex items-center gap-2 ${mutedTextClass} hover:text-gray-900 dark:hover:text-white transition-colors`}
      >
        <ArrowLeft className="w-4 h-4" /> Go Back
      </button>
    </div>
  );
}